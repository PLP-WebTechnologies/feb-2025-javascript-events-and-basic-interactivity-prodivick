<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Interactive HTML Page</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    /* General Styles */
    body {
      font-family: 'Segoe UI', sans-serif;
      background: #f4f7f9;
      margin: 0;
      padding: 20px;
    }
    h1 {
      color: #333;
    }
    button {
      padding: 10px 20px;
      margin: 10px 5px;
      border: none;
      border-radius: 5px;
      background: #007BFF;
      color: white;
      cursor: pointer;
    }
    button:hover {
      background: #0056b3;
    }
    .container {
      max-width: 900px;
      margin: auto;
    }
    /* Slideshow Styles */
    .slideshow {
      position: relative;
      width: 100%;
      max-width: 600px;
      margin: 20px auto;
      overflow: hidden;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    .slides {
      display: flex;
      transition: transform 0.5s ease-in-out;
    }
    .slides img {
      width: 100%;
      height: auto;
    }
    /* Tabs */
    .tabs {
      margin-top: 30px;
    }
    .tab-buttons {
      display: flex;
      margin-bottom: 10px;
    }
    .tab-buttons button {
      flex: 1;
      background: #e0e0e0;
    }
    .tab-buttons button.active {
      background: #007BFF;
      color: white;
    }
    .tab-content {
      display: none;
    }
    .tab-content.active {
      display: block;
      background: white;
      padding: 15px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }
    /* Form Styles */
    form {
      margin-top: 30px;
      background: white;
      padding: 20px;
      border-radius: 5px;
      box-shadow: 0 0 10px rgba(0,0,0,0.05);
    }
    input[type="text"], input[type="email"], input[type="password"] {
      width: 100%;
      padding: 10px;
      margin: 8px 0;
      box-sizing: border-box;
    }
    .feedback {
      font-size: 0.9em;
      color: red;
    }
  </style>
</head>
<body>

<div class="container">
  <h1 id="mainTitle">Welcome to My Interactive Page</h1>
  <button onclick="changeTextColor()">Change Text Color</button>
  <button onclick="duplicateText()">Duplicate Text</button>

  <div id="duplicateArea"></div>

  <!-- Slideshow -->
  <div class="slideshow">
    <div class="slides" id="slideContainer">
      <img src="https://via.placeholder.com/600x300?text=Slide+1" alt="Slide 1">
      <img src="https://via.placeholder.com/600x300?text=Slide+2" alt="Slide 2">
      <img src="https://via.placeholder.com/600x300?text=Slide+3" alt="Slide 3">
    </div>
  </div>

  <!-- Tabs -->
  <div class="tabs">
    <div class="tab-buttons">
      <button onclick="openTab('tab1')" class="active">Tab 1</button>
      <button onclick="openTab('tab2')">Tab 2</button>
    </div>
    <div class="tab-content active" id="tab1">
      <p>This is content for Tab 1.</p>
    </div>
    <div class="tab-content" id="tab2">
      <p>This is content for Tab 2.</p>
    </div>
  </div>

  <!-- Form -->
  <form onsubmit="return validateForm()">
    <label>Name (required):</label>
    <input type="text" id="name" required>
    <div id="nameFeedback" class="feedback"></div>

    <label>Email (required):</label>
    <input type="email" id="email" required>
    <div id="emailFeedback" class="feedback"></div>

    <label>Password (min 8 characters):</label>
    <input type="password" id="password" required>
    <div id="passwordFeedback" class="feedback"></div>

    <button type="submit">Submit</button>
  </form>
</div>

<script>
  // Text Color Change
  function changeTextColor() {
    const colors = ['red', 'blue', 'green', 'purple', 'orange'];
    document.getElementById("mainTitle").style.color = colors[Math.floor(Math.random() * colors.length)];
  }

  // Duplicate Text
  function duplicateText() {
    const area = document.getElementById("duplicateArea");
    const p = document.createElement("p");
    p.textContent = "This is duplicated text!";
    area.appendChild(p);
  }

  // Keypress Detection
  document.addEventListener('keydown', (e) => {
    console.log(`Key pressed: ${e.key}`);
  });

  // Slideshow
  let slideIndex = 0;
  const slides = document.getElementById("slideContainer");
  const totalSlides = slides.children.length;

  function showSlides() {
    slideIndex = (slideIndex + 1) % totalSlides;
    slides.style.transform = `translateX(-${slideIndex * 100}%)`;
    setTimeout(showSlides, 3000);
  }
  showSlides();

  // Tabs
  function openTab(id) {
    document.querySelectorAll('.tab-buttons button').forEach(btn => btn.classList.remove('active'));
    document.querySelectorAll('.tab-content').forEach(tab => tab.classList.remove('active'));

    document.querySelector(`.tab-buttons button[onclick="openTab('${id}')"]`).classList.add('active');
    document.getElementById(id).classList.add('active');
  }

  // Form Validation
  function validateForm() {
    let isValid = true;

    const name = document.getElementById("name").value.trim();
    const email = document.getElementById("email").value.trim();
    const password = document.getElementById("password").value;

    document.getElementById("nameFeedback").textContent = name ? '' : 'Name is required';
    document.getElementById("emailFeedback").textContent = /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email) ? '' : 'Invalid email format';
    document.getElementById("passwordFeedback").textContent = password.length >= 8 ? '' : 'Password must be at least 8 characters';

    if (!name || !/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email) || password.length < 8) {
      isValid = false;
    }

    return isValid;
  }

  // Real-time Feedback
  document.getElementById("name").addEventListener("input", function () {
    document.getElementById("nameFeedback").textContent = this.value.trim() ? '' : 'Name is required';
  });

  document.getElementById("email").addEventListener("input", function () {
    const valid = /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(this.value);
    document.getElementById("emailFeedback").textContent = valid ? '' : 'Invalid email format';
  });

  document.getElementById("password").addEventListener("input", function () {
    document.getElementById("passwordFeedback").textContent = this.value.length >= 8 ? '' : 'Password must be at least 8 characters';
  });
</script>

</body>
</html>
